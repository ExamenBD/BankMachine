<Page x:Class="BankMachine.PinPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankMachine"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PinPage"
      Background="White">

    <Grid>
        <Viewbox>
            <StackPanel Margin="30" Orientation="Vertical" Width="150" Height="140"  HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Label Name="ErrorLabel" Foreground="Red"/>
                <PasswordBox FontSize="25" Name="PinCodeNumberBox" MaxLength="4" PasswordChar="*"  />
                <Button Name="Enter" Content="Готово"  Click="Enter_Click"/>
                <Button Name="DeleteText" Content="Удалить всё"  Click="DeleteText_Click"/>
                <Button Content="Отмена"  Click="Button_Click"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
