<Page x:Class="BankMachine.GiveOutMoney"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankMachine"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GiveOutMoney" Background="White">

    <Grid>
        <Viewbox>
            <StackPanel Margin="30" Orientation="Vertical" Width="150" Height="100"  HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Label Name="LabelMessage" Foreground="Red"   VerticalAlignment="Top"/>
                <TextBox Name="SumMoneyOut"  TextWrapping="Wrap"  VerticalAlignment="Top" PreviewTextInput="SumMoneyOut_PreviewTextInput"  />
                <Button Name="EnterSum" Content="Готово"   VerticalAlignment="Top" Click="EnterSumButton_Click"/>
                <Button Name="BackPage" Content="Отмена"   VerticalAlignment="Top" Click="BackPage_Click"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
