<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankMachine"
      x:Class="BankMachine.StartPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage"
      Background="White">

    <Grid>
        <Viewbox>
            <StackPanel Margin="30" Orientation="Vertical" Width="150" Height="80"  HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBox Name="MaskedTextBox" Width="auto" Height="auto"  MaxLength="19"   TextWrapping="Wrap"  VerticalAlignment="Top"  PreviewTextInput="MaskedTextBox_PreviewTextInput" TextChanged="MaskedTextBox_TextChanged_1"/>
            <Button x:Name="DeleteText" Content="Удалить всё"   VerticalAlignment="Top" Click="DeleteText_Click"/>
            <Button x:Name="Enter" Content="Готово"  VerticalAlignment="Top" Click="Enter_Click"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
