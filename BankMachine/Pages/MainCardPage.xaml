<Page x:Class="BankMachine.MainCardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankMachine"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainCardPage"
      Background="White">

    <Grid>
        <Viewbox>
            <StackPanel Margin="30" Orientation="Vertical" Width="150" Height="80"  HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Button Name="BalanceCard" Content="Остаток по карте"   VerticalAlignment="Top" Click="BalanceCard_Click"/>
                <Button Name="WithdrawMoney" Content="Снять деньги"   VerticalAlignment="Top" Click="WithdrawMoneyButton_Click"/>
                <Button Name="Back" Content="Отмена"   VerticalAlignment="Top" Click="BackButton_Click"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
